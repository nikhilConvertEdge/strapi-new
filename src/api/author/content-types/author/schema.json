{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "unique": true
    },
    "email": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "name": {
      "type": "string"
    },
    "designation": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "about": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "qualification": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "experience": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "certifications": {
      "type": "component",
      "repeatable": true,
      "component": "component.features"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "company": {
      "type": "string"
    },
    "yearOfExp": {
      "type": "decimal"
    },
    "socialMediaLinks": {
      "type": "component",
      "repeatable": true,
      "component": "blog-component.social-media-links"
    }
  }
}

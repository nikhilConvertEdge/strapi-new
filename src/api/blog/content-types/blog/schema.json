{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "viewCount": {
      "type": "integer"
    },
    "durationInMinutes": {
      "type": "integer"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "relatedArticles": {
      "type": "component",
      "repeatable": false,
      "component": "blog-section.related-articles"
    },
    "recommentedArticle": {
      "type": "component",
      "repeatable": false,
      "component": "blog-section.related-articles"
    },
    "recommentedCourse": {
      "type": "component",
      "repeatable": false,
      "component": "blog-section.recommended-course"
    },
    "description": {
      "type": "text"
    },
    "blog_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::blog-category.blog-category"
    },
    "contents": {
      "type": "dynamiczone",
      "components": [
        "blog-section.table-of-contents",
        "blog-section.blog-definition",
        "blog-section.video-content-block",
        "blog-section.content-banner",
        "blog-section.highlight-block",
        "blog-section.signup-newsletter",
        "blog-component.code-text-editor",
        "blog-component.image",
        "blog-section.background-highlight-block",
        "blog-section.comparison-table",
        "blog-section.free-guide-button",
        "blog-section.title-with-description",
        "section.faq-details",
        "blog-component.social-media-links"
      ]
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "redirectUrl": {
      "type": "component",
      "repeatable": false,
      "component": "component.button-with-icon"
    }
  }
}
